<p id="notice"><%= notice %></p>

<h1>Elenco Categorie</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome Categoria</th>
      <th>Descrizione</th>
      <th>Icona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <% @cats.each do |cat| %>
      <tr>
        <td><h3><%= cat.name %></h3></td>
        <td><%= cat.description %></td>
        <td><%= image_tag(cat.picture, :width=>150) if cat.picture.present? %></td>
        <td><%= link_to 'Dettagli', cat, :class=>"btn btn-info" %></td>
        <td><%= link_to 'Modifica', edit_cat_path(cat), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Elimina', cat, method: :delete, data: { confirm: 'Sei sicuro?' },  :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi Categoria', new_cat_path %>
